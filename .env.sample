# Copy to .env and fill in values as needed.

# App
APP_ENV=development
LOG_LEVEL=INFO

# LLMs / Providers (optional)
OPENAI_API_KEY=

# Database
# Postgres default (used in Docker):
# DATABASE_URL=postgresql+psycopg://aura:aura@db:5432/aura
# For SQLite fallback, leave unset or set:
# DATABASE_URL=sqlite:///./data/jobs.db

# Production reverse proxy (Caddy)
# Set your domain (e.g., aura.carlospada.me) and ACME email
AURA_DOMAIN=
ACME_EMAIL=
