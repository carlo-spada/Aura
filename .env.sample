# Copy to .env and fill in values as needed.

# App
APP_ENV=development
LOG_LEVEL=INFO

# LLMs / Providers (optional)
OPENAI_API_KEY=

# Database
# Postgres default (used in Docker):
# DATABASE_URL=postgresql+psycopg://aura:aura@db:5432/aura
# For SQLite fallback, leave unset or set:
# DATABASE_URL=sqlite:///./data/jobs.db

# Production reverse proxy (Caddy)
# Set your subdomains and ACME email
# Example:
#   AURA_API_DOMAIN=api.aura.carlospada.me
#   AURA_DASHBOARD_DOMAIN=dashboard.aura.carlospada.me
AURA_API_DOMAIN=
AURA_DASHBOARD_DOMAIN=
ACME_EMAIL=

# API CORS (comma-separated list of allowed origins)
# Example: https://aura.carlospada.me,https://www.aura.carlospada.me
ALLOWED_ORIGINS=

# Auth (NextAuth shared secret for API JWT verification)
NEXTAUTH_SECRET=
